{% extends 'base.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}
   <h2 class="font-weight-normal text-center mt-5 mb-5">Events Platform</h2>
   
   <div class="container ">        
   <div>{%include "components/corousel.html.twig"%}</div>
   <div class="dropdown mt-5">
  <button class="btn btn-outline-dark rounded-0 mb-5 ms-2 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Filter By
  </button>
  <ul class="dropdown-menu">
  <li><a class="dropdown-item" href="{{ path('app_events_index')}}">All Events</a></li>
    <li><a class="dropdown-item" href="{{ path('app_events_index', {'type': 'Theatre'}) }}">Theatre</a></li>
    <li><a class="dropdown-item" href="{{ path('app_events_index', {'type': 'Music'}) }}">Music</a></li>
    <li><a class="dropdown-item" href="{{ path('app_events_index', {'type': 'Cinema'}) }}">Cinema</a></li>
    <li><a class="dropdown-item" href="{{ path('app_events_index', {'type': 'Museum'}) }}">Museum</a></li>
  </ul>
</div>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-xs-2">
{% for event in events %}        
<div class="container d-flex justify-content-around">
<div class="card mb-5 image" style="width: 18em;">
  <img src="{{ event.image }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ event.name }}</h5>
    <p class="card-text">{{ event.address }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Date: {{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</li>
    
    <li class="list-group-item">Type: {{ event.type }}</li>
  </ul>
  <div class="card-body">
    <a class="btn btn-outline-dark rounded-0" href="{{ path('app_events_show', {'id': event.id}) }}">Read More >></a>
    <a class="btn btn-outline-dark rounded-0" href="{{ path('app_events_edit', {'id': event.id}) }}">Edit</a>
  </div>
</div>
</div>
        {% else %}
            <tr>
                <td colspan="12">No Events Found</td>
            </tr>
        {% endfor %}
     </div>
     
</div>   
<div class="d-flex justify-content-sm-center"> 
    <a class="btn btn-outline-dark rounded-0 mb-5" href="{{ path('app_events_new') }}">Create new</a>
    </div>
{% endblock %}
